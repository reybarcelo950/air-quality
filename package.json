{
  "name": "air-quality",
  "private": true,
  "workspaces": [
    "backend",
    "ui"
  ],
  "scripts": {
    "install:all": "npm install",
    "start": "npm-run-all --parallel start:backend start:ui",
    "start:backend": "npm --workspace=backend run start",
    "start:ui": "npm --workspace=ui run start",
    "build": "npm run build:backend && npm run build:ui",
    "build:backend": "npm --workspace=backend run build",
    "build:ui": "npm --workspace=ui run build"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
